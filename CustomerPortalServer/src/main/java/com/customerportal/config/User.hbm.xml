<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <class name="com.customerportal.bean.User" table="crmuser">
  <id name="username">
   <column name="userName"  />
  </id>
  <property name="password" column="password" type="java.lang.String" />
  <property name="firstName" column="firstName"  type="java.lang.String"/>	
  <property name="lastName" column="lastName"  type="java.lang.String"/>
  <property name="emailAddress" column="emailAddress"  type="java.lang.String"/>
  <property name="admin" column="isAdmin" type="java.lang.Boolean"/>
  <property name="permission" column="permission"  type="java.lang.String"/>
  <property name="imageContent" column="imageContent" />

 </class>
</hibernate-mapping>